# Server configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=production

# Discord OAuth2 Configuration - Replace with your values
DISCORD_CLIENT_ID=123456789012345678
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=https://your-app-domain.com/api/auth/discord/callback
DISCORD_GUILD_ID=123456789012345678

# Session configuration
# Generate a secure random string for SESSION_SECRET
SESSION_SECRET=change_this_to_a_random_secure_string
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# Authentication cookie settings
# Set to true if your site uses HTTPS, false for local development
AUTH_COOKIE_SECURE=true
# Set to "lax" for most cases, "strict" for better security, or "none" for development across domains
AUTH_COOKIE_SAME_SITE=lax